<%= render 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= t(:suppliers) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to t(:new_supplier), new_object_url, :icon => 'icon-plus', :id => 'admin_new_supplier_link' %>
  </li>
<% end %>

<table class="admin-report" width="545">
  <thead>
    <tr>
      <th><%= t(:supplier_name) %></th>
      <th><%= t(:email) %></th>
      <th><%= t(:phone) %></th>
      <th class="actions">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td><%= supplier.name %></td>
        <td><%= supplier.email %></td>
        <td><%= supplier.phone %></td>
        <td class="actions">
          <%= link_to_edit supplier, :no_text => true %>
          <%= link_to_delete supplier, :no_text => true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
